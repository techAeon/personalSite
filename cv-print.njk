{# ── JS: read ?view= param and show/hide extra entries ── #}
<script>
(function () {
  var view = 'one';
  try {
    var param = new URLSearchParams(window.location.search).get('view');
    if (param === 'all') view = 'all';
  } catch (e) {}

  function applyView(v) {
    var extras = document.querySelectorAll('.print-entry--extra, .print-entry--extra');
    var isAll = (v === 'all');
    for (var i = 0; i < extras.length; i++) {
      extras[i].style.display = isAll ? '' : 'none';
    }
    var btns = document.querySelectorAll('.print-toggle-btn');
    for (var j = 0; j < btns.length; j++) {
      btns[j].classList.toggle('is-active', btns[j].dataset.printView === v);
    }
    var label = document.querySelector('.print-view-label');
    if (label) label.textContent = 'Showing:';
  }

  applyView(view);

  var toggleBtns = document.querySelectorAll('.print-toggle-btn');
  for (var k = 0; k < toggleBtns.length; k++) {
    toggleBtns[k].addEventListener('click', (function(btn) {
      return function () {
        view = btn.dataset.printView;
        applyView(view);
        var url = new URL(window.location.href);
        url.searchParams.set('view', view);
        window.history.replaceState(null, '', url.toString());
      };
    })(toggleBtns[k]));
  }
})();
</script>
