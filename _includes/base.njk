<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Kieran J. O'Leary" }}</title>
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  <script>
    // FOUC prevention â€” set data-theme before first paint
    (function(){
      try {
        var s = localStorage.getItem('kjo-theme') || 'light';
        // data-theme only ever gets 'light' or 'dark'
        if (s === 'dark') {
          document.documentElement.setAttribute('data-theme','dark');
        }
        // occasion mode also needs its attribute for wallpaper
        if (s === 'occasion') {
          document.documentElement.setAttribute('data-theme','light');
          document.documentElement.setAttribute('data-occasion','pending');
        }
      } catch(e){}
    })();
  </script>
</head>
<body>
  {{ content | safe }}
  <script>var DAILY = {{ daily | dump | safe }};</script>
  <script src="{{ '/js/theme.js' | url }}"></script>
  {% if page.fileSlug == "" %}
  <script src="{{ '/js/home.js' | url }}"></script>
  {% endif %}
</body>
</html>
