<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Kieran J. O'Leary" }}</title>
  <script>var DAILY = {{ daily | dump | safe }};</script>
  <script>
    (function () {
      var t = '';
      try { t = localStorage.getItem('kjo-theme') || ''; } catch(e) {}
      if (t === 'dark') {
        document.documentElement.setAttribute('data-theme', 'dark');
      } else {
        document.documentElement.setAttribute('data-theme', 'light');
      }
      if (t === 'occasion') {
        document.documentElement.setAttribute('data-occasion', 'pending');
      }
    })();
  </script>
  <link rel="icon" type="image/svg+xml" href="{{ '/images/favicon.svg' | url }}">
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  <script>
    // FOUC prevention — set data-theme before first paint
    (function(){
      try {
        var s = localStorage.getItem('kjo-theme') || 'light';
        // data-theme only ever gets 'light' or 'dark'
        if (s === 'dark') {
          document.documentElement.setAttribute('data-theme','dark');
        }
        // occasion mode also needs its attribute for wallpaper
        if (s === 'occasion') {
          document.documentElement.setAttribute('data-theme','light');
          document.documentElement.setAttribute('data-occasion','pending');
        }
      } catch(e){}
    })();
  </script>
</head>
<body>

  {# ── Shared header for all inner pages (not home, not print) ── #}
  {% if page.fileSlug != "" %}
  <header class="site-header">
    <div class="site-header__inner">

      <a href="{{ '/' | url }}" class="site-header__home" title="Home">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
      </a>

      <nav class="site-header__nav">
        <a href="{{ '/about' | url }}"
           class="site-header__link{% if page.fileSlug == 'about' %} is-active{% endif %}">About Me</a>
        <a href="{{ '/projects' | url }}"
           class="site-header__link{% if page.fileSlug == 'projects' %} is-active{% endif %}">Projects</a>
        <a href="{{ '/blog' | url }}"
           class="site-header__link{% if page.fileSlug == 'blog' %} is-active{% endif %}">Journal</a>
      </nav>

      <button class="theme-btn" id="btn-theme" title="Switch mode">
        <svg id="icon-current" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round">
          <!-- filled by theme.js -->
        </svg>
        <svg id="icon-hover" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round"
             style="display:none">
          <!-- filled by theme.js -->
        </svg>
      </button>

    </div>
  </header>
  {% endif %}

  {{ content | safe }}

  {# ── Shared footer for inner pages (homepage renders it in index.njk for placement) ── #}
  {% if page.fileSlug != "" %}
  <footer class="site-footer">
    {% include "footer-content.njk" %}
  </footer>
  {% endif %}
  <script src="{{ '/js/theme.js' | url }}"></script>
  <script src="{{ '/js/footer-search.js' | url }}"></script>
  {% if page.fileSlug == "" %}
  <script src="{{ '/js/home.js' | url }}"></script>
  {% endif %}
  {% if page.fileSlug != "" %}
  <script src="{{ '/js/pages.js' | url }}"></script>
  {% endif %}

</body>
</html>
