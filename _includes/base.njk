<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Kieran J. O'Leary" }}</title>
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
</head>
<body>

  {# ── Shared header for all inner pages (not home, not print) ── #}
  {% if page.fileSlug != "" %}
  <header class="site-header">
    <div class="site-header__inner">

      <a href="{{ '/' | url }}" class="site-header__home" title="Home">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
      </a>

      <nav class="site-header__nav">
        <a href="{{ '/about' | url }}"
           class="site-header__link{% if page.fileSlug == 'about' %} is-active{% endif %}">About Me</a>
        <a href="{{ '/projects' | url }}"
           class="site-header__link{% if page.fileSlug == 'projects' %} is-active{% endif %}">Projects</a>
        <a href="{{ '/blog' | url }}"
           class="site-header__link{% if page.fileSlug == 'blog' %} is-active{% endif %}">Journal</a>
      </nav>

      <button class="theme-btn" id="btn-theme" title="Switch mode">
        <svg id="icon-current" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round">
          <!-- filled by theme.js -->
        </svg>
        <svg id="icon-hover" viewBox="0 0 24 24" fill="none"
             stroke="currentColor" stroke-width="2"
             stroke-linecap="round" stroke-linejoin="round"
             style="display:none">
          <!-- filled by theme.js -->
        </svg>
      </button>

    </div>
  </header>
  {% endif %}

  {{ content | safe }}

  {# ── Shared footer for all inner pages (not home, not print) ── #}
  {% if page.fileSlug != "" %}
  <footer class="site-footer">
    <div class="home-footer">

      <div class="home-footer__search">
        <label for="site-search" class="sr-only">Search</label>
        <input type="search" id="site-search" name="q" placeholder="Search&hellip;" class="footer-search">
      </div>

      <nav class="home-footer__nav">
        <a href="{{ '/' | url }}">About</a>
        <a href="{{ '/projects' | url }}">Projects</a>
        <a href="{{ '/blog' | url }}">Journal</a>
      </nav>

      <div class="home-footer__contact">
        <a href="mailto:kieran.j.oleary@gmail.com" class="contact-icon" title="Email">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
        </a>
        <a href="https://www.linkedin.com/in/kieranjoleary" target="_blank" class="contact-icon" title="LinkedIn">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
            <rect x="2" y="9" width="4" height="12"/>
            <circle cx="4" cy="4" r="2"/>
          </svg>
        </a>
        <a href="https://github.com/techaeon" target="_blank" class="contact-icon" title="GitHub">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
          </svg>
        </a>
      </div>

    </div>
  </footer>
  {% endif %}

  <script>var DAILY = {{ daily | dump | safe }};</script>
  <script src="{{ '/js/theme.js' | url }}"></script>
  {% if page.fileSlug == "" %}
  <script src="{{ '/js/home.js' | url }}"></script>
  {% endif %}
  {% if page.fileSlug != "" %}
  <script src="{{ '/js/pages.js' | url }}"></script>
  {% endif %}

</body>
</html>
